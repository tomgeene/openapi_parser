    "/boundary-values": {
      "post": {
        "summary": "Test boundary values",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "minInt": {
                    "type": "integer",
                    "minimum": -2147483648
                  },
                  "maxInt": {
                    "type": "integer",
                    "maximum": 2147483647
                  },
                  "minNumber": {
                    "type": "number",
                    "minimum": -1.7976931348623157e308
                  },
                  "maxNumber": {
                    "type": "number",
                    "maximum": 1.7976931348623157e308
                  },
                  "emptyString": {
                    "type": "string",
                    "minLength": 0
                  },
                  "veryLongString": {
                    "type": "string",
                    "maxLength": 1000000
                  },
                  "emptyArray": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 0
                  },
                  "largeArray": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "maxItems": 10000
                  },
                  "deeplyNested": {
                    "type": "object",
                    "properties": {
                      "level1": {
                        "type": "object",
                        "properties": {
                          "level2": {
                            "type": "object",
                            "properties": {
                              "level3": {
                                "type": "object",
                                "properties": {
                                  "level4": {
                                    "type": "object",
                                    "properties": {
                                      "value": {
                                        "type": "string"
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
